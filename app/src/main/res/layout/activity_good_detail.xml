<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_back_grey"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp15"
                android:paddingTop="@dimen/dp16"
                android:paddingRight="@dimen/dp15"
                android:paddingBottom="@dimen/dp16">

                <ImageView
                    android:id="@+id/good_user_photo"
                    android:layout_width="@dimen/dp48"
                    android:layout_height="@dimen/dp48"
                    android:background="#ff0000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/good_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一寻，寻不着。"
                        android:textColor="@color/color_text_black3"
                        android:textSize="@dimen/sp18" />

                    <TextView
                        android:id="@+id/good_user_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4"
                        android:text="2019/05/06 12:00:45"
                        android:textColor="@color/color_text_gray"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp12"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp15"
                android:paddingTop="@dimen/dp16"
                android:paddingRight="@dimen/dp15"
                android:paddingBottom="@dimen/dp16">

                <TextView
                    android:id="@+id/good_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥129.00"
                    android:textColor="@color/color_text_black3"
                    android:textSize="@dimen/sp18" />

                <TextView
                    android:id="@+id/good_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6"
                    android:text="甜美标题甜美标题甜美标题甜美标题甜美标题甜美标题甜美标题甜美标题甜美标题甜美标题"
                    android:textColor="@color/color_text_black3"
                    android:textSize="@dimen/sp14" />

                <LinearLayout
                    android:layout_marginTop="@dimen/dp4"
                    android:id="@+id/good_image_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp16"
        android:paddingRight="@dimen/dp15">

        <ImageView
            android:id="@+id/good_share"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp16"
            android:src="@mipmap/ic_home_share" />

        <ImageView
            android:id="@+id/good_collection"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp16"
            android:layout_marginLeft="@dimen/dp16"
            android:src="@mipmap/ic_collection" />

        <ImageView
            android:id="@+id/good_like"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp16"
            android:layout_marginLeft="@dimen/dp16"
            android:src="@mipmap/ic_like" />

        <ImageView
            android:id="@+id/good_send"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp16"
            android:layout_marginLeft="@dimen/dp16"
            android:src="@mipmap/ic_home_send" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></View>

        <TextView
            android:id="@+id/contact_ta"
            android:layout_width="@dimen/dp96"
            android:layout_height="@dimen/dp36"
            android:background="@drawable/bg_button_white_selector"
            android:gravity="center"
            android:text="@string/contact_ta"
            android:textColor="@drawable/text_black_white_selector"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/go_buy"
            android:layout_width="@dimen/dp96"
            android:layout_height="@dimen/dp36"
            android:layout_marginLeft="@dimen/dp7"
            android:background="@drawable/bg_button_black_selector"
            android:gravity="center"
            android:text="@string/go_buy"
            android:textColor="@drawable/text_white_black_selector"
            android:textSize="@dimen/sp14"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>