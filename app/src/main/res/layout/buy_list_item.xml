<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/white_rect_circle"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/sale_item_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp256"
        android:background="#00ff00"/>
    <TextView
        android:id="@+id/sale_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:lines="2"
        android:maxLines="2"
        android:textSize="@dimen/sp12"
        android:textColor="@color/color_text_black3"
        android:text="甜美标题甜美标题甜美标题甜美标题甜美标题甜美标题甜美标题甜美标题甜美标题甜美标题"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp13"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/sale_item_photo"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp16"
            android:background="#0000ff"/>
        <TextView
            android:id="@+id/sale_item_name"
            android:layout_marginLeft="@dimen/dp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_black3"
            android:textSize="@dimen/sp12"
            android:text="一寻，寻一寻，寻…"
            android:maxLength="4"></TextView>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></View>
<!--        <TextView-->
<!--            android:id="@+id/sale_item_price"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="¥129.00"-->
<!--            android:textColor="@color/color_text_black3"-->
<!--            android:textSize="@dimen/sp12"></TextView>-->
    </LinearLayout>
</LinearLayout>