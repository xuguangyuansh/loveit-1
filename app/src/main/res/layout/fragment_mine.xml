<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp1"
            android:layout_weight="1"></View>

        <LinearLayout
            android:id="@+id/mine_notification"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_gravity="center_vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:src="@mipmap/ic_notification" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <cn.net.view.mine.MineHeader
                android:background="@color/color_white"
                android:id="@+id/mine_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </cn.net.view.mine.MineHeader>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp12"
                android:background="@color/color_back_grey"></View>
            <cn.net.view.mine.MineItem
                android:id="@+id/mine_item_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mine_item_text="@string/mine_make"
                app:mine_item_icon="@mipmap/ic_me_creation"
                ></cn.net.view.mine.MineItem>
            <cn.net.view.mine.MineItem
                android:id="@+id/mine_item_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mine_item_text="@string/mine_sale"
                app:mine_item_icon="@mipmap/ic_tab_sale_s"
                ></cn.net.view.mine.MineItem>
            <cn.net.view.mine.MineItem
                android:id="@+id/mine_item_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mine_item_text="@string/mine_buy"
                app:mine_item_icon="@mipmap/ic_tab_buy_s"
                app:mine_item_show_line="false"
                ></cn.net.view.mine.MineItem>
            <!--<cn.net.view.mine.MineItem-->
                <!--android:id="@+id/mine_item_get_buy"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:mine_item_text="@string/mine_get_buy"-->
                <!--app:mine_item_icon="@mipmap/ic_me_creation"-->
                <!--app:mine_item_show_line="false"-->
                <!--&gt;</cn.net.view.mine.MineItem>-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp12"
                android:background="@color/color_back_grey"></View>
            <cn.net.view.mine.MineItem
                android:id="@+id/mine_item_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mine_item_text="@string/mine_collection"
                app:mine_item_icon="@mipmap/ic_collection"
                ></cn.net.view.mine.MineItem>
            <cn.net.view.mine.MineItem
                android:id="@+id/mine_item_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mine_item_text="@string/mine_star"
                app:mine_item_icon="@mipmap/ic_like"
                app:mine_item_show_line="false"
                ></cn.net.view.mine.MineItem>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp12"
                android:background="@color/color_back_grey"></View>
            <!--<cn.net.view.mine.MineItem-->
                <!--android:id="@+id/mine_item_money"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:mine_item_text="@string/mine_money"-->
                <!--app:mine_item_icon="@mipmap/ic_me_creation"-->
                <!--app:mine_item_show_line="false"-->
                <!--&gt;</cn.net.view.mine.MineItem>-->
            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dp12"-->
                <!--android:background="@color/color_back_grey"></View>-->
            <cn.net.view.mine.MineItem
                android:id="@+id/mine_item_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mine_item_text="@string/mine_setting"
                app:mine_item_icon="@mipmap/ic_me_settings"
                app:mine_item_show_line="false"
                ></cn.net.view.mine.MineItem>
        </LinearLayout>
    </ScrollView>
</LinearLayout>