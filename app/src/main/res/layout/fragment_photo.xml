<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="@dimen/dp12"
            android:id="@+id/photo_image"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp16"
            android:src="@mipmap/common_back"
            />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"></View>
        <LinearLayout
            android:id="@+id/photo_continue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:paddingTop="@dimen/dp2"
                android:paddingBottom="@dimen/dp2"
                android:text="继续"
                android:layout_marginRight="@dimen/dp15"
                android:textSize="@dimen/sp12"
                android:textColor="@color/color_text_black3"
                android:background="@drawable/black_rect"/>
        </LinearLayout>
    </LinearLayout>
    <cn.net.view.viewpager.NoScrollViewPager
        android:id="@+id/photo_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></cn.net.view.viewpager.NoScrollViewPager>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/photo_tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        app:tabMode="fixed"
        android:layout_gravity="center_horizontal"
        app:tabIndicatorFullWidth="false"
        app:tabGravity="fill"
        app:tabPaddingEnd="0px"
        app:tabPaddingStart="0px"
        android:lineSpacingExtra="0px"
        android:fillViewport="false"
        android:background="@android:color/transparent"
        app:tabIndicatorHeight="@dimen/dp3"
        app:tabIndicatorColor="@color/indicator_color"
        app:tabTextAppearance="@style/TabLayoutText"
        ></com.google.android.material.tabs.TabLayout>
</LinearLayout>