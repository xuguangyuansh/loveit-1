<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:layout_height="match_parent" >

        <TextView
            android:layout_marginTop="@dimen/dp15"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/color_text_black3"
            android:text="" />

        <TextView
            android:layout_marginTop="@dimen/dp24"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/color_text_black3"
            android:text="sss" />

        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp10"
            android:orientation="horizontal">
            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp44"
                android:layout_marginRight="@dimen/dp15"
                android:background="@drawable/bg_button_white_selector"
                android:textSize="@dimen/sp15"
                android:textColor="@drawable/text_black_white_selector"
                android:text="取消" />

            <Button
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp44"
                android:textColor="@drawable/text_white_black_selector"
                android:textSize="@dimen/sp15"
                android:background="@drawable/bg_button_black_selector"
                android:text="确定" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>