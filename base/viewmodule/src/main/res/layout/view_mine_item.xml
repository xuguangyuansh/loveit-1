<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp18"
    android:paddingTop="@dimen/dp20"
    android:paddingRight="@dimen/dp16"
    >

    <LinearLayout
        android:paddingBottom="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mine_item_icon"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp16"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_me_creation" />

        <TextView
            android:id="@+id/mine_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp8"
            android:text="我的创作"
            android:textColor="@color/color_text_black3"
            android:textSize="@dimen/sp14" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></View>

        <ImageView
            android:layout_width="@dimen/dp12"
            android:layout_height="@dimen/dp12"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_common_next" />
    </LinearLayout>
    <View
        android:id="@+id/mine_item_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_line_gray"></View>
</LinearLayout>