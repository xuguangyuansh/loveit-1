<resources>

    <declare-styleable name="BottomBarItem">
        <attr name="bottom_bar_image" format="reference"></attr>
        <attr name="bottom_bar_title" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="max_select" format="integer"></attr>
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MineItemStyle">
        <attr name="mine_item_text" format="string"></attr>
        <attr name="mine_item_icon" format="reference"></attr>
        <attr name="mine_item_show_line" format="boolean"></attr>
    </declare-styleable>

</resources>