<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="wrap_content">
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="item"-->
        <!--android:layout_marginBottom="100dp"/>-->
    <LinearLayout
        android:layout_marginTop="@dimen/dp12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/recommand_item_photo"
            android:layout_width="@dimen/dp28"
            android:layout_height="@dimen/dp28"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/recommand_item_name"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_text_black3"/>
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp1"
            android:layout_weight="1"></View>
        <TextView
            android:id="@+id/recommand_item_time"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019/05/06 12:00:45"
            android:textSize="@dimen/sp12"
            android:textColor="@color/color_text_gray"/>
    </LinearLayout>
    <cn.net.view.viewpager.TouchViewPager
        android:layout_marginTop="@dimen/dp10"
        android:id="@+id/recommand_item_viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp350">

    </cn.net.view.viewpager.TouchViewPager>
    <TextView
        android:id="@+id/recommand_item_des"
        android:layout_marginTop="@dimen/dp13"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
        android:maxLines="1"
        android:textSize="@dimen/sp15"
        android:textColor="@color/color_text_black3"
        android:text="描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginBottom="@dimen/dp20"
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp14"
        android:paddingRight="@dimen/dp17">
        <LinearLayout
            android:id="@+id/recommand_item_tags"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <!--标签-->
            <cn.net.view.textview.TagView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#日常#"/>
            <cn.net.view.textview.TagView
                android:layout_marginLeft="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#日常#"/>
        </LinearLayout>
        <!--操作-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/recommand_share"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:src="@mipmap/ic_home_share"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/recommand_collection"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:src="@mipmap/ic_collection"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/recommand_like"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:src="@mipmap/ic_like"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/recommand_send"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:src="@mipmap/ic_home_send"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp12"
        android:background="@color/color_back_grey"></View>
</LinearLayout>