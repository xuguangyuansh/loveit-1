<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="EditHintStyle" parent="@android:style/TextAppearance">
        <!-- 字体颜色 -->
        <item name="android:textColor">@color/color_text_black</item>
        <!-- 字体大小 -->
        <item name="android:textSize">@dimen/sp14</item>
    </style>
    <style name="EditTextStyle" parent="@android:style/TextAppearance">
        <!-- 字体颜色 -->
        <item name="android:textColor">@color/color_text_black3</item>
        <!-- 字体大小 -->
        <item name="android:textSize">@dimen/sp16</item>
    </style>
</resources>
