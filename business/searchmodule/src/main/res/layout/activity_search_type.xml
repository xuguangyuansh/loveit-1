<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color_back_grey"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp14"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp32"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_rect_circle"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/search_type_icon"
                android:layout_marginLeft="@dimen/dp13"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp14"
                android:layout_height="@dimen/dp14"
                android:src="@mipmap/ic_search"/>
            <EditText
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/dp7"
                android:textSize="@dimen/sp14"
                android:textColor="@color/color_text_black3"
                android:id="@+id/search_type_edit"
                android:textColorHint="@color/color_text_black"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/search_type_cancel"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_text_black3"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/cancel"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_search_type"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>